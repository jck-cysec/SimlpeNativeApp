<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white">

    <!-- Gambar Profil -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp" />

    <!-- Nama -->
    <TextView
        android:id="@+id/tvNamaPengirim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textStyle="bold"
        android:textColor="#212121"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintEnd_toStartOf="@id/tvWaktu" />

    <!-- Waktu -->
    <TextView
        android:id="@+id/tvWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1m"
        android:textSize="12sp"
        android:textColor="#4CAF50"
        app:layout_constraintTop_toTopOf="@id/tvNamaPengirim"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pesan -->
    <TextView
        android:id="@+id/tvPesan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Isi pesan terakhir..."
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaPengirim"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
